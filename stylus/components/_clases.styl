// new-level 
.icon-level
  sprite($sprite-new-level)
  vam(-2px, 0px 0 0 10px)
.new-level
  regular()
  font-size 10px 
  text-transform: uppercase
  color blue3
  span 
    text-align justify
  &:hover
    .icon-level 
      sprite($sprite-new-levela)
      
// BG 
