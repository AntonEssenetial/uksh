// Custom functions
vam($top = 0px, $margin = 0, $position = relative, $display = inline-block, $vertical-align = middle)
  if $display
    display $display
  if $vertical-align
    vertical-align $vertical-align
  if $position
    position $position
  if $top 
    top $top
  if $margin 
    margin $margin
  
bordered( $color = yellow, $size = 14px, $color2 = white)
  if $size
    font-size $size
  if $color2
    color $color2
  bold()
  text-transform: uppercase
  +after('')
    width 20px 
    height 2px 
    if $color
      background: $color
    display block
    margin 2px 0 0 0
    trs()
  &:hover 
    color yellow
    &:after 
      width 100% 
      trs()
      
